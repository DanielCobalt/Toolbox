<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.jonathanwiggins.toolbox"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/toolbox_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CoinActivity">
        </activity>
        <activity android:name=".DiceActivity">
        </activity>
        <activity android:name=".NoteChooserActivity">
        </activity>
        <activity android:name=".NoteEditorActivity">
        </activity>
        <activity android:name=".SoundsActivity">
        </activity>
    </application>

</manifest>